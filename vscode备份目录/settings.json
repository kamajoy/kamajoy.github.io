{
  // ============================ 外观与界面 ============================
  "workbench.iconTheme": "material-icon-theme", // 使用 Material 图标主题，美化文件树
  "workbench.colorTheme": "Dracula Theme", // 使用 Dracula 暗色主题
  "workbench.editor.wrapTabs": true, // 当打开很多文件时，标签栏自动换行显示（避免滚动）
  // ============================ 文件与监控 ============================
  "files.exclude": {
    // 在左侧资源管理器中隐藏以下目录
    "**/.github": true,
    //"**/.vscode": true,
    "**/node_modules": true,
    "**/.idea": true
  },
  "files.watcherExclude": {
    // 不监听以下目录的文件变化，防止 VS Code 卡顿
    "**/node_modules/**": true,
    "**/vendor/**": true,
    "**/dist/**": true,
    "**/out/**": true,
    "**/build/**": true,
    "**/temp/**": true,
    "**/.history/**": true
  },
  "search.exclude": {
    "**/node_modules": true
  },
  // ============================ 编辑器通用 ============================
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.fontSize": 11,
  "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  // ==== JSON / YAML / Docker / proto3 ====
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[proto3]": {
    "editor.formatOnSave": false
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "yaml.schemas": {
    // VS Code 的 YAML 插件
    "file:///Users/guibingli/.vscode/extensions/continue.continue-1.0.22-darwin-arm64/config-yaml-schema.json": [
      ".continue/**/*.yaml"
    ]
  },
  // ============================ Vue ============================
  "[vue]": {
    //"editor.defaultFormatter": "Vue.volar"
    // 禁止保存时自动格式化
    "editor.formatOnSave": false,
    // 启用智能补全
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.suggest.showFunctions": true,
    "editor.suggest.showMethods": true,
    "editor.suggest.showVariables": true,
    "editor.suggest.showKeywords": true,
    "editor.wordBasedSuggestions": "matchingDocuments"
  },
  // ============================ Go ============================
  "gopls": {
    // ---- 性能优化 ----
    "directoryFilters": [
      "-vendor",
      "-trunk",
      "-history",
      "-dist",
      "-out",
      "-actions",
      "-logs",
      "-notifications",
      "-plugins",
      "-node_modules"
    ],
    // ---- 禁用自动补全 ----
    "ui.completion.usePlaceholders": false,
    "ui.semanticTokens": true,
    "ui.documentation.hoverKind": "SynopsisDocumentation",
    "completeUnimported": false,
    "deepCompletion": false,
    "completionBudget": "0s",
    // ---- 启用静态检查与基础分析 ----
    "staticcheck": true,
    "analyses": {
      "unusedparams": true,
      "shadow": true
    }
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    //-------- 禁止 Go 插件提供补全，避免和 AI Code 冲突 START--------
    "editor.quickSuggestions": {
      "other": false,
      "comments": false,
      "strings": false
    },
    "editor.suggest.showWords": false,
    "editor.suggest.showFunctions": false,
    "editor.suggest.showMethods": false,
    "editor.suggest.showVariables": false,
    "editor.suggest.showModules": false,
    "editor.suggest.showSnippets": false,
    "editor.wordBasedSuggestions": "off",
    //"editor.suggest.showKeywords": false
    "editor.suggest.showKeywords": true // 保留关键字补全
    //-------- 禁止 Go 插件提供补全 END--------
  },
  //不需要安装插件
  //"go.formatTool": "gofmt",
  // 需要安装插件，go install golang.org/x/tools/cmd/goimports@latest
  "go.formatTool": "goimports",
  //不需要安装插件
  //"go.lintTool": "golint",
  // 需要安装插件, go install github.com/golangci/golangci-lint/cmd/golangci-lint@latest
  "go.lintTool": "golangci-lint",
  //需要配合golangci-lint使用，否则需要注释掉
  "go.lintFlags": [
    "run",
    "--config=.golangci.yml", // 可选，明确指定配置文件
    "--fast" // 可选，加快速度（跳过慢 linter）
  ],
  "go.lintOnSave": "workspace",
  "go.toolsManagement.autoUpdate": true,
  "eslint.validate": [
    // "javascript",
    //"javascriptreact",
    //"typescript",
    //"typescriptreact",
    //"vue"
  ],
  // ============================ PHP ============================
  "[php]": {
    // "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    // 禁止保存时自动格式化
    "editor.formatOnSave": false,
    // 启用智能补全
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.suggest.showFunctions": true,
    "editor.suggest.showMethods": true,
    "editor.suggest.showVariables": true,
    "editor.suggest.showKeywords": true,
  },
  // ============================ AI 与自动补全 ============================
  //完全禁用 Copilot 智能提示
  "github.copilot.enable": {
    "*": false
  },
  "github.copilot.nextEditSuggestions.enabled": false,
  // Windsurf(codeium) AI 智能提示，true:开启，false：关闭. 验证是否开启成功在 go 代码中输入 func add()如果出现类似 return a + b说明成功启用
  "codeium.enableCodeLens": false,
  // ============================ Git / Docker / Schema ============================
  "docker.extension.enableComposeLanguageServer": false,
  "git.openRepositoryInParentFolders": "always",
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "trae.enableCodelens": {
    "enableInlineExplain": false,
    "enableInlineDocumentation": false
  },
}
